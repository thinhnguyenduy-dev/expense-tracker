# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/expense_tracker

# JWT - CHANGE IN PRODUCTION!
JWT_SECRET=your-secret-key-change-it
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Backend
BACKEND_CORS_ORIGINS=["http://localhost:3000"]
ENVIRONMENT=development

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Sentry (optional)
SENTRY_DSN=

# AI Provider (openai, google, anthropic, groq)
AI_PROVIDER=openai
# OpenAI / Groq
OPENAI_API_KEY=your_api_key
OPENAI_API_BASE=https://api.groq.com/openai/v1
OPENAI_MODEL_NAME=llama-3.3-70b-versatile

# Google (Gemini)
# GOOGLE_API_KEY=your_google_key
# GOOGLE_MODEL_NAME=gemini-1.5-flash

# Anthropic (Claude)
# ANTHROPIC_API_KEY=your_anthropic_key
# ANTHROPIC_MODEL_NAME=claude-3-sonnet-20240229